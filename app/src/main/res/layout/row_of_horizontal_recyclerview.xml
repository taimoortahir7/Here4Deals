<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="150dp"
    android:layout_margin="10dp"
    android:layout_height="196dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/img_lly"
    android:orientation="vertical"
    android:background="@drawable/borderbottom"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="2dp">
        <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/imageView_horizontal_cardview"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>

        <TextView
            android:id="@+id/textView_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_lly"
            android:layout_alignStart="@+id/img_lly"
            android:layout_below="@+id/img_lly"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/jhfdg"
            android:text="TextView" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of bids"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView_horizontal"
            android:layout_alignLeft="@+id/textView_horizontal"
            android:layout_alignStart="@+id/textView_horizontal" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="Price" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date / Time"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_marginBottom="13dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>